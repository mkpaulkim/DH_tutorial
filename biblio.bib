}
@inproceedings{Potcoava2009b,
   abstract = {An improved digital interference holography (DIH) technique suitable for fundus images is proposed. This technique incorporates a dispersion compensation algorithm to compensate for the unknown axial length of the eye. Using this instrument we acquired successfully tomographic fundus images in human eye with narrow axial resolution less than 5 mu m. The optic nerve head together with the surrounding retinal vasculature were constructed. We were able to quantify a depth of 84 mu m between the retinal fiber and the retinal pigmented epithelium layers. DIH provides high resolution 3D information which could potentially aid in guiding glaucoma diagnosis and treatment.},
   author = {Mariana C Potcoava and M K Kim and Christine N Kay},
